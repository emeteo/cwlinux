CC=gcc
CFLAGS=-I. -Wall -I/usr/lib/x86_64-linux-gnu
IDIR=.
LDFLAGS=-lrt -l mpdclient
SOURCES= debug.h main.c menu.c menu.h serial.c serial.h
OBJ= $(SOURCES: .cpp=.o)
EXE=cwlinux

all: $(SOURCES) $(EXE)

$(EXE): $(OBJ)
	$(CC) $(OBJ) -o $@ $(LDFLAGS) 

%.o: %.c $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)


.PHONY: clean

clean:
	rm -f *.o *~ core  $(EXE)
